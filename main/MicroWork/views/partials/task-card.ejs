<!-- This is the corrected, reusable template for a single task listing -->
<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 flex flex-col sm:flex-row items-start gap-4 sm:gap-6">
    
    <!-- Logo Section (Flex Child 1) - There is only ONE logo element now -->
    <div class="flex-shrink-0">
        <div class="w-14 h-14 bg-gray-200 rounded-md flex items-center justify-center">
            <span class="text-xl font-bold text-gray-600"><%= task.logo %></span>
        </div>
    </div>

    <!-- Main Task Info (Flex Child 2) -->
    <div class="flex-grow">
        <h3 class="text-xl font-bold text-blue-600 hover:underline cursor-pointer"><%= task.title %></h3>
        <p class="text-lg font-semibold text-gray-800 mt-1"><%= task.salary %></p>
        <div class="text-sm text-gray-500 mt-2 flex items-center gap-2 flex-wrap">
            <span><%= task.company %></span>
            <span class="text-gray-300">â€¢</span>
            <span><%= task.location %></span>
        </div>
        <p class="text-gray-700 mt-3 text-base">
            <%= task.description %>
        </p>
    </div>

    <!-- Apply Button & Time Section (Flex Child 3) -->
    <div class="w-full sm:w-auto flex-shrink-0 flex flex-row sm:flex-col justify-between sm:justify-start items-center sm:items-end mt-4 sm:mt-0 gap-4">
        <a href="#" class="apply-button bg-blue-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors whitespace-nowrap">Apply</a>
        <p class="text-xs text-gray-400 sm:mt-4"><%= task.posted %></p>
    </div>

</div>